<Window x:Class="StreamScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel ="clr-namespace:StreamScheduler.MVVM.ViewModels"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="1000"
        MinHeight="600" MinWidth="1000" FontSize="11"
        Background="#262626">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3" VerticalAlignment="Top"
              Background="#4F3B9D" Foreground="White">
            <MenuItem Header="Upcoming" Command="{Binding SearchViewCommand}"/>
            <MenuItem Header="Playlist" Command="{Binding PlaylistViewCommand}"/>
            <MenuItem Header="Manage Channels" Command="{Binding ChannelFormViewCommand}"/>
            <MenuItem Header="Settings" Command="{Binding SettingsViewCommand}"/>
        </Menu>

        <StackPanel Grid.Row="1">
            <TextBlock Foreground="#CCAD14" Text="Stream Scheduler"
                       FontSize="18" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Margin="0,15,0,0"/>
        </StackPanel>
        <ContentControl Grid.Row="1" Grid.Column="1"
                        Margin="5,5,5,5"
                        Content="{Binding CurrentView}"/>
    </Grid>
</Window>
